<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AuthBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoangnguyen.buddiesradar.activities.RegisterActivity">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/AuthTitle"
        android:layout_marginTop="200dp"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tvSubTitle"
        style="@style/AuthTitle.AuthSubTitle"
        android:text="@string/app_sub_title" />

    <LinearLayout
        android:id="@+id/llEdit"
        style="@style/AuthEditFieldContainer"
        android:layout_width="440dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/etUsername"
            style="@style/AuthEditText"
            android:hint="@string/et_username">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/etPassword"
            style="@style/AuthEditText"
            android:hint="@string/et_password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/AuthEditText"
            android:hint="@string/et_email"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <View
        android:id="@+id/vDivider"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@id/llEdit"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnRegister"
        style="@style/Button"
        android:layout_alignLeft="@id/llEdit"
        android:layout_alignStart="@id/llEdit"
        android:layout_below="@id/llEdit"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_toLeftOf="@id/vDivider"
        android:layout_toStartOf="@id/vDivider"
        android:text="@string/btn_register" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/Button"
        android:layout_alignEnd="@id/llEdit"
        android:layout_alignRight="@id/llEdit"
        android:layout_below="@id/llEdit"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@id/vDivider"
        android:layout_toRightOf="@id/vDivider"
        android:text="@string/cancel_btn" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:indeterminate="true"
        android:visibility="gone" />

</RelativeLayout>
